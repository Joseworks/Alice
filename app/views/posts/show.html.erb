<% content_for(:page_title) do -%>
  <%= post_title(@post) -%>
<% end -%>


<h2><%= link_to_post(@post) %></h2>

<div class="post-header">
  <ul>

    <li class="date">Posted at <%= format_post_date(@post.published_at) if @post.published? %>
      <%= updated_time(@post) %>
    </li>
    <% if @post.author == "Russ Bleemer" %>
      <li>By <%= mail_to 'russ.bleemer@quidnuncre.com', "Russ Bleemer" %></li>
    <% else %>
      <li>By <%= @post.author %></li>
    <% end %>
</div>

<div class="sharing-buttons">
    Share this post:
    <span class='st_sharethis'></span>
    <span class='st_facebook'></span>
    <span class='st_twitter'></span>
    <span class='st_email'></span>
    <a href="javascript:window.print()"><%= image_tag("silk/printer.png", alt: "print") %></a>

</div>

<% if @post.image.present? %>
  <div class="img-container">
    <div>
      <%= image_tag @post.image.url(:medium) %>
        <% if @post.caption.present? %>
          <span><%= @post.caption %><span>
        <% end %>
    </div>
  </div>
<% end %>
<%= raw(@post.body_html) %>

<% if @post.source_link != '' %>
  Source: <a href= <%= @post.source_link %> >
    <% if @post.source_link_description %>
      <%= @post.source_link_description %>
    <% else %>
      <%= @post.source_link %></a>
    <% end %>
<% end %>

<div class="meta">
    <% unless @post.tag_list.empty? -%>
      <li class="tags">Tagged <%= linked_tag_list(@post.tag_list) %></li>
    <% end -%>
  </ul>
</div>


<% if %w(development test).include?(Rails.env) %>
  <% if @post.previous_post %>
    <%= link_to "<- Previous ", @post.previous_post %>
  <% end %>

  <% if @post.next_post %>
    <%= link_to " Next ->", @post.next_post %>
  <% end %>
<% end %>

<div id="disqus_thread"></div>

<%= disqus_comments %>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>

<div class="related">Looking for more? Head on over to the <%= link_to 'archives', archives_path %>.</div>

<script type="text/javascript">var switchTo5x=true;</script>
<script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
