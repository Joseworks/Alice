<%= tinymce_assets %>
<%= form.inputs do -%>
  <%= form.input :title -%>
  <%= form.input :author %>
  <%= form.input :intro_text, :label => "Summary text", :hint => "Front page summary.", input_html: { class: "tinymce", rows: 12 } %>
  <%= form.input :body, input_html: {class: "tinymce", rows: 24 } -%>
  <%= form.input :tag_list, :as => 'string', :required => false, :hint => 'Comma separated: ruby, rails&hellip;. No periods, as they cause problems.'.html_safe -%>
  <%= form.input :source_link, hint: "(include 'http://')" -%>
  <%= form.input :source_link_description -%>
  <div class="img-attached">
    <% if @post && @post.image.exists? %>
      <div class="img-area">
        <%= image_tag(@post.image.url(:thumb)) %>
        Current image file name:
        <%= @post.image_file_name.to_s %>
      </div>
    <% end %>
    <div class="entry-area">
      <%= form.input :image, as: :file, html_options: {name: @post.image_file_name.to_s} %>
      <%= form.input :caption %>
    </div>
  </div>
<% end -%>
<%= form.inputs do -%>
  <%= form.input :published_at_natural, :label => 'Published at', :as => 'string', :hint => 'Examples: now, yesterday, 1 hour from now, etc. '.html_safe + link_to("More information here.".html_safe, "http://chronic.rubyforge.org/", :target => "_blank") + ' (Opens in new window.) Leave blank for an unpublished draft.' -%>
  <%= form.input :slug, :hint => "Leave blank for an auto-generated slug based on the title." -%>
  <%= form.input :minor_edit, :as => 'boolean', :hint => 'Minor edits will not show up as refreshed in feed readers. Use this to fix spelling mistakes and the like.' unless @post.new_record? -%>
<% end -%>
<%= tinymce width: 576 %>